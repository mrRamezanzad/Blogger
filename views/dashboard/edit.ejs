<%- include("../partials/__header--start", {title: "Edit Profile"}) %>
<%- include("../partials/__header--end") %>
<%- include("../partials/__navbar", {page: "dashboard"}) %> 
<%- include("../partials/__alert", {flash: locals.flash}) %>

<div class="container">
    
    <h5 class="d-inline-block">مشخصات جدید را وارد کنید</h5>
    <button data-user-id="<%= locals.user._id %> " id="edit-user" class=" d-inline-block mt-2 btn btn-success me-3">ذخیره</button>
    <div class="row mt-3 gx-5 gy-3">

        <!-- sidebar navigation -->
        <%- include('../partials/__sidebar', {user: locals.user}) %>
        
        <div class="col-6 col-md-4 col-xl-3">
            <label for="firstname">نام</label>
            <input type="text" name="firstname" class="form-control" value="<%= locals.user.firstName %>">
        </div>
        <div class="col-6 col-md-4 col-xl-3">
            <label for="lastname">نام خانوادگی</label>
            <input type="text" name="lastname" class="form-control" value="<%= locals.user.lastName %>">
        </div>
        <div class="col-6 col-md-4 col-xl-3">
            <label for="gender">جنسیت</label>
            <select class="form-select"name="gender">
                <option value="male" <% if (locals.user.gender === "male") { %> selected <% } %> > مرد</option>
                <option value="female" <% if (locals.user.gender === "female") { %> selected <% } %> >زن</option>
            </select>
        </div>
        <div class="col-6 col-md-4 col-xl-3">
            <label for="mobile">موبایل</label>
            <input type="text" name="mobile" class="form-control" value="<%= locals.user.mobile %>">
        </div>
        <div class="col-6 col-md-4 col-xl-3">
            <label for="role">نقش کاربر</label>
            <input type="text" name="role" class="form-control" value="<%= locals.user.role %>" disabled>
        </div>
        <div class="col-6 col-md-4 col-xl-3">
            <label for="username">نام کاربری</label>
            <input type="text" name="username" class="form-control" value="<%= locals.user.username %>">
        </div>
    </div>
</div>

<!-- Importing Scripts -->
<%- include("../partials/__scripts") %>
<script src="/javascripts/dashboard.js"></script>
<script src="/javascripts/sidebar.js"></script>