<%- include("./partials/__header--start", {title: "Edit Profile"}) %>
<%- include("./partials/__header--end") %>

<!-- Custom Styles -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

<%- include("./partials/__header--end") %>
<%- include("./partials/__navbar", {page: "dashboard"}) %> 
<%- include("./partials/__alert", {msg, err}) %> 


<div class="container-fluid">
    <div class="row">
        <span class="dashboard-menu-button bi bi-columns" ></span>
        
        <!-- sidebar navigation -->
        <%- include('./partials/__sidebar', {user: locals.user}) %>

        <div class="col-12 col-md-9 col-lg-8 container text-end">
            <h3><%= article.title %> </h3>
            <img src="/images/articles/<%= article.picture %> " alt="article picture">
            <p><%= article.content %> </p>
            <p> article.date</p>
            <button class="btn btn-warning">تغییر</button><button class="btn btn-danger">حذف</button>
        </div>
    </div>
</div>

<!-- Avatar Change Modal -->
<%- include("./partials/__modal--avatar", {userId: user._id}) %>

<!-- Import Scripts -->
<%- include("./partials/__scripts") %>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script src="/javascripts/article.js"></script>
<script src="/javascripts/sidebar.js"></script>