<%- include("./partials/__header", {title: "Edit Profile"}) %>
<%- include("./partials/__navbar", {page: "dashboard"}) %> 
<%- include("./partials/__alert", {msg, err}) %> 


<div class="container-fluid">
    <div class="row">
        <span class="dashboard-menu-button bi bi-columns" ></span>
        
        <!-- sidebar navigation -->
        <%- include('./partials/__sidebar', {user: locals.user}) %>

        <div class="col-10 container text-end">
            <h3>داشبورد</h3>
            
                <!--Profile Details-->
                <div class="row mt-3 gx-5 gy-3">
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="firstname">نام</label>
                        <input type="text" name="firstname" class="form-control" placeholder="<%= locals.user.firstName %> " disabled>
                    </div>
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="lastname">نام خانوادگی</label>
                        <input type="text" name="lastname" class="form-control" placeholder="<%= locals.user.lastName %> " disabled>
                    </div>
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="gender">جنسیت</label>
                        <select class="form-select"name="gender" disabled>
                            <option value="male" <% if (locals.user.gender === "male") { %> selected <% } %> > مرد</option>
                            <option value="female" <% if (locals.user.gender === "female") { %> selected <% } %> >زن</option>
                        </select>
                    </div>
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="mobile">موبایل</label>
                        <input type="text" name="mobile" class="form-control" placeholder="<%= locals.user.mobile %> " disabled>
                    </div>
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="role">نقش کاربر</label>
                        <input type="text" name="role" class="form-control" placeholder="<%= locals.user.role %> " disabled>
                    </div>
                    <div class="col-6 col-md-4 col-xl-3">
                        <label for="username">نام کاربری</label>
                        <input type="text" name="username" class="form-control" placeholder="<%= locals.user.username %> " disabled>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <a class="mt-2 btn btn-primary ms-2" href="/dashboard/edit/">
                        تغییر مشخصات
                    </a>
                    <button class="mt-2 btn btn-primary ms-2" data-bs-toggle="modal" data-bs-target="#password-confirmation-modal">
                        تغییر رمز عبور
                    </button>
                    <a class="mt-2 btn btn-danger" role="delete-user" data-user-id="<%= user._id %>">حذف اکانت</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Importing Password Change Confirmation modal -->
<%- include("./partials/__modal--password", {userId: user._id}) %>

<!-- Avatar Change Modal -->
<%- include("./partials/__modal--avatar", {userId: user._id}) %>

<!-- Import Scripts -->
<%- include("./partials/__scripts") %>
<script src="/javascripts/dashboard.js"></script>